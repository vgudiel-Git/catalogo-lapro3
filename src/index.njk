---
title: "Mi Catálogo"
layout: layouts/base.njk
---

<div class="category-tabs">
  <ul class="category-nav">
    <li><a href="#todos" class="active">Todos los Productos</a></li>
    {% for category in categories %}
      {% if loop.index <= 4 %}
        <li class="category-item-visible"><a href="#{{ category.value }}">{{ category.label }}</a></li>
      {% else %}
        <li class="category-item-hidden"><a href="#{{ category.value }}">{{ category.label }}</a></li>
      {% endif %}
    {% endfor %}
    <li class="category-toggle">
      <button class="toggle-btn" onclick="toggleCategories()">
        <span class="toggle-text">Más categorías</span>
        <span class="toggle-icon">▼</span>
      </button>
    </li>
  </ul>
</div>

<div class="category-sections">
  <!-- Sección para todos los productos -->
  <section id="todos" class="product-grid category-section active">
    <h2 class="category-title">Todos los Productos</h2>
    {% for product in collections.products %}
      <div class="product-card">
        <a href="{{ product.url }}">
          {% if product.data.images and (product.data.images | length) > 0 %}
            {% if product.data.images[0].image %}
              <img src="{{ product.data.images[0].image }}" alt="{{ product.data.images[0].alt | default(product.data.title) }}">
            {% else %}
              <img src="{{ product.data.images[0] }}" alt="{{ product.data.title }}">
            {% endif %}
          {% elif product.data.image %}
            <img src="{{ product.data.image }}" alt="{{ product.data.title }}">
          {% else %}
            <img src="/assets/images/default.jpg" alt="{{ product.data.title }}">
          {% endif %}
          {% set discountPrice = product.data.price | calculateDiscountPrice(product.data.discount, product.data.discountPrice) %}
          {% if discountPrice %}
            {% if product.data.discount == 'custom' %}
              <span class="offer-badge">Oferta</span>
            {% else %}
              <span class="offer-badge">Descuento {{ product.data.discount }}%</span>
            {% endif %}
          {% endif %}
          <h3>{{ product.data.title }}</h3>
          {% if product.templateContent %}
            <div class="description">{{ product.templateContent | striptags | truncate(150) }}</div>
          {% endif %}
          {% set discountPrice = product.data.price | calculateDiscountPrice(product.data.discount, product.data.discountPrice) %}
          {% if discountPrice %}
            <div class="price-container">
              <p class="price discount-price">Q{{ discountPrice | formatPrice }}</p>
              <p class="price original-price">Q{{ product.data.price | formatPrice }}</p>
            </div>
          {% else %}
            <p class="price">Q{{ product.data.price | formatPrice }}</p>
          {% endif %}
        </a>
        <a class="btn-whatsapp" href="https://wa.me/16263941200?text=Hola, me interesa el producto: {{ product.data.title }}" target="_blank" rel="noopener">
          <span>Comprar por</span>
